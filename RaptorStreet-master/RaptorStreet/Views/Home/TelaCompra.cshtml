<body>
	<section class="container">
		<h2>CARRINHO</h2>
		<h2>IDENTIFICAÇÃO</h2>
		<h2>PAGAMENTO</h2>
	</section>

	<section class="container">
		<div>
			<div>
				<h3>PRODUTO</h3>
				<img />
				<p>Jordan 4 retro</p>
				<p>Cor: Red Thunder</p>
				<p>Tamanho 39</p>
			</div>

			<div>
				<h3>QUANTIDADE</h3>
				<div class="d-flex justify-content-center align-items-center gap-1">
					<button class="btn btn-secondary" onclick="changeQuantity(-1)">-</button>
					<div id="quantityValue" class="px-3 py-2 border bg-dark text-white fw-bold">1</div>
					<button class="btn btn-secondary" onclick="changeQuantity(1)">+</button>
				</div>

				<script>
					let quantity = 1;
					function changeQuantity(delta) {
					  quantity = Math.max(1, quantity + delta);
					  document.getElementById('quantityValue').textContent = quantity;
					}
				</script>
			</div>

			<div>
				<h3>VALOR UNITÁRIO</h3>
				<p>R$499,99</p>
			</div>

			<div>
				<h3>VALOR TOTAL</h3>
				<p>R$500,00</p>
			</div>
		</div>

		<div>
			<div>
				<h3>PRAZO DE ENTREGA</h3>
				<div class="input-group mb-3">
					<input type="tel" class="form-control" name="CEP" value="" id="calcular" placeholder="Insira seu CEP" maxlength="8" />
					<button class="btn btn-dark" type="button">Calcular</button>
				</div>
			</div>

			<div>
				<h3>CUPOM DE DESCONTO</h3>
				<div class="input-group mb-3">
					<input type="tel" class="form-control" name="CEP" value="" id="calcular" placeholder="Insira seu CEP" maxlength="8" />
					<button class="btn btn-dark" type="button">APLICAR</button>
				</div>
			</div>

			<div>
				<h3>RESUMO</h3>
				<p>Valor dos Produtos</p><p>R$499,99</p>
				<p>Frete</p><p>R$9,99</p>
				<p>Desconto</p><p>-R$250,00</p>
				<p>Total da Compra</p><p>R$500,00(?)</p>
			</div>
		</div>

		<div>
			<button class="btn btn-danger">EXCLUIR</button>
			<button class="btn btn-secondary">CONTINUAR</button>
		</div>

	</section>


</body>