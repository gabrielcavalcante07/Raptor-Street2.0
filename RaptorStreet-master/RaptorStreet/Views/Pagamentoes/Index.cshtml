@model IEnumerable<RaptorStreet.Models.Pagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusPag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoPag)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPag">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPag">Details</a> |
