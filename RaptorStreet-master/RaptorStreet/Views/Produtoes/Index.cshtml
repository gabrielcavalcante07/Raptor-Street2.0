@model IEnumerable<RaptorStreet.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<div class="container text-white">
    <h1>Lista de Produtos</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NomeProduto)</th>
                <th>@Html.DisplayNameFor(model => model.PrecoProduto)</th>
                <th>@Html.DisplayNameFor(model => model.Qtd)</th>
                <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>@Html.DisplayNameFor(model => model.Desconto)</th>
                <th>@Html.DisplayNameFor(model => model.Tamanho)</th>
                <th>@Html.DisplayNameFor(model => model.MarcaProdutos)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomeProduto)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecoProduto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Qtd)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Desconto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tamanho)</td>
                    <td>@Html.DisplayFor(modelItem => item.MarcaProdutos.IdMarca)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdProduto">Editar</a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdProduto">Detalhes</a>
                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.IdProduto">Excluir</a>

                        <!-- Modal específico para cada produto -->
                        <div class="modal fade" id="exampleModal-@item.IdProduto" tabindex="-1" aria-labelledby="exampleModalLabel-@item.IdProduto" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content bg-dark text-white">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel-@item.IdProduto">Excluir Produto?</h1>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Você realmente deseja excluir o produto @item.NomeProduto?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-route-id="@item.IdProduto" method="post">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <input type="submit" value="Excluir" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a class="btn btn-dark" asp-controller="home" asp-action="crudadm">Voltar</a>
    </div>
</div>
